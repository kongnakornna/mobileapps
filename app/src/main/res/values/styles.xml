<resources>

    <style name="TextDrawer" />
    <style name="TextDrawer.Widget" />

    <style name="TextDrawer.Widget.AlertTextLabeltitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.AlertBtnLabeltitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.BtnJoinNow">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.BtnSignIn">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.LoginText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.LoginText2">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.EditTextName">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.EditTextEmail">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/hint_email</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.EditTextMobile">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/hint_mobile</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.EditTextPassword">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:password">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">@string/hint_password</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.RegisterText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="TextDrawer.Widget.HomeBtnTab">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

</resources>
