<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="@drawable/landing_page"
    tools:context="devsync.com.talentonlineandroid.MainActivity"
    >

    <LinearLayout
        android:padding="@dimen/activity_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <Button
            android:padding="10dp"
            android:id="@+id/main_btn_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_join_now"
            android:background="@color/colorPrimary"
            style="@style/TextDrawer.Widget.BtnJoinNow"
            />

        <TextView
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:id="@+id/main_btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/btn_sign_in"
            style="@style/TextDrawer.Widget.BtnSignIn"
            />

    </LinearLayout>

</RelativeLayout>
